<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem7B.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de registro"/>
            <Entry x:Name="Nombre"    Placeholder="Escriba su Nombre"/>
            <Entry x:Name="Usuario"    Placeholder="Escriba su usuario"/>
            <Entry x:Name="Contrasena"    Placeholder="Escriba su contrasena" IsPassword="True"/>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>